<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    custom:cardCornerRadius="5dp"
    custom:cardPreventCornerOverlap="true"
    custom:cardUseCompatPadding="true"
    custom:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.facebook.drawee.view.SimpleDraweeView

            android:id="@+id/iv_preview"
            android:layout_width="150dp"
            android:layout_height="130dp"
            fresco:placeholderImage="@drawable/image_demo" />

        <TextView
            android:id="@+id/tv_itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_preview"
            android:text="TITLE"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_itemTitle"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_preview"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Desc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_scoure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_preview"
            android:text="1999-09-15"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1999-09-15"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>


