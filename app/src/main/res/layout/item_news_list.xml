<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView

        fresco:placeholderImage="@drawable/image_demo"
        android:id="@+id/iv_preview"
        android:layout_width="150dp"
        android:layout_height="130dp" />

    <TextView
        android:text="TITLE"
        android:textSize="28sp"
        android:layout_toRightOf="@id/iv_preview"
        android:id="@+id/tv_itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:layout_toRightOf="@id/iv_preview"
        android:text="Desc"
        android:layout_below="@id/tv_itemTitle"
        android:id="@+id/tv_ViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:layout_toRightOf="@id/iv_preview"
        android:layout_below="@id/tv_ViewCount"
        android:text="1999-09-15"
        android:id="@+id/tv_itemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
